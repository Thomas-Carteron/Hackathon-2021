{% extends 'layout.html.twig' %}
{% block content %}
    <div class="container justify-content-center mt-5 d-flex justify-content-center ">
<table class="table table-dark w-50  p-3 border white table-hover">
    <thead class="">
    <tr>
        <th class="text-center m-3 fs-5 override-red-over active" scope="col">Top</th>
        <th class="text-center"  scope="col">Pseudo</th>
        <th class="text-center"  scope="col">Meilleurs temps</th>
    </tr>
    </thead>
    {% for user in users  %}
    <tbody>
    <tr>
        <th  class="text-center" scope="row">{{ loop.index  }}</th>
        <td class="text-center" >{{ user.name }}</td>
        <td class="text-center" >{{ user.best_time|date('i:s') }}</td>
    </tr>
    {% endfor %}
    </tbody>
</table>
    </div>
{% endblock %}
